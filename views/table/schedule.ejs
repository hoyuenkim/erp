<% include ../header.ejs %> <% include ../navibar.ejs %>
<div class="col-sm-offset-1 col-sm-10"><div class="" id="calendar"></div></div>

<script type="text/javascript">
  const date = new Date()
  $(document).ready(function() {
      $("#calendar").fullCalendar({
        header: { left: 'prev,next today', center: 'title'}, defaultDate: date,
        displayEventTime: false,

        events : [
          <%schedules.forEach(function(schedule){%>
                      {title : "<%=schedule.subject%>",
                      start : "<%=schedule.date%>",
                      url : "/table/schedule/subject/<%=schedule.serial%>",
                      <%if(schedule.onepass_ship === '출고완료' && schedule.server_ship == '출고완료'){%>
                          backgroundColor : '#40FF00',
                          <%} else {%>
                          backgroundColor : '#A4A4A4',
                      <%}%>
                      borderColor : 'transparent',
                      },
              <%})%>
        ]
      });
  });
</script>

